@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>หน้าหลัก</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <h1>หน้าหลัก</h1>

    <div class="text-center mt-4">
        <a href="/Management" class="btn btn-secondary">ย้อนกลับไปยังหน้า Management</a>
    </div>
    <h2>Product List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price (per day)</th>
                <th>Points Required</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Productname</td>
                    <td>@product.Description</td>
                    <td>@product.PricePerDay</td>
                    <td>@product.PointsRequired</td>
                    <td><a href="@Url.Action("Create", "Rental", new { productId = product.ProductId })">Rent</a></td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/js/site.js"></script>
    <script>

    </script>
</body>
</html>

