@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
      
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard">
            <h2>ยินดีต้อนรับ คุณ  @ViewData["Username"]#@ViewData["Discriminator"]</h2>
            <p>Your Discord ID is: @ViewData["UserId"]</p>
            <p>Role: @ViewData["Role"]</p>
            @if (ViewData["AvatarUrl"] != null)
            {
                <img src="@ViewData["AvatarUrl"]" alt="Profile Picture" class="avatar" />
            }
            
            <div class="card">
                <h3>Account Overview</h3>
                <p>Here you can view your profile and settings.</p>
            </div>

            <form method="post" asp-action="Logout">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>
