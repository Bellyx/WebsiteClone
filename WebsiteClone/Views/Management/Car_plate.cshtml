@model IEnumerable<WebsiteClone.Models.Car_plate>;
@{
    ViewData["Title"] = "ระบบจัดการทะเบียนรถ";
    // ชื่อเซิฟเวอร์

    var datacarCount = ViewBag.DatacarCount;
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ข้อมูลผู้ไอเท็มทั้งหมด </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <h1>ระบบจัดการทะเบียนรถ</h1>
    <p>จำนวนรถในเซิฟเวอร์ : <span class="highlight">@datacarCount</span> คัน</p>
    <div class="text-center mt-4">
        <a href="/Management" class="btn btn-secondary">ย้อนกลับไปยังหน้า Management</a>
    </div>
    <table class="table table-striped table-hover table-bordered" id="userTable">
        <thead class="table-dark text-center">
            <tr>
                <th>Steam ID</th>
                <th>ชื่อ</th>
                <th>นามสกุล</th>
                <th>รุ่นรถ</th>
                <th>ป้ายทะเบียน</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Car_plate in Model)
            {
                <tr>
                    <td>@Car_plate.Identifier</td>
                    <td>@Car_plate.Firstname</td>
                    <td>@Car_plate.Lastname</td>
                    <td>@Car_plate.Car_id</td>
                    <td>@Car_plate.Car_number</td>
                    <td style="text-align: center;">
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee"
                                data-url="@Url.Action("Edit")">
                            Edit
                        </button>
                    </td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Delete", new { id = Car_plate.Identifier })" class="btn btn-danger btn-sm rounded-pill" onclick="return confirm('คุณต้องการลบข้อมูลนี้ใช่หรือไม่?');">
                            <i class="bi bi-trash"></i> ลบ
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/js/site.js"></script>
    <script>

    </script>
</body>
</html>


