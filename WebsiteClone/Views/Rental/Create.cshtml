@model Rental
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ข้อมูลผู้ไอเท็มทั้งหมด</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <h1>ข้อมูลไอเท็มทั้งหมด</h1>

    <div class="text-center mt-4">
        <a href="/Management" class="btn btn-secondary">ย้อนกลับไปยังหน้า Management</a>
    </div>
    <h2>Rental Details</h2>
    <div>
        <p>Product: @Model.Product.Productname</p>
        <p>Start Date: @Model.StartDate.ToShortDateString()</p>
        <p>Expiry Date: @Model.ExpiryDate.ToShortDateString()</p>
        <p>Points Used: @Model.PointsUsed</p>
    </div>
    <script src="~/js/site.js"></script>
    <script>

    </script>
</body>
</html>

